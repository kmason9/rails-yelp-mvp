<h2><%= @restaurant.name %></h2>
<h4> <%= @restaurant.category.capitalize %></h4>
<p> Address: <%= @restaurant.address %> </p>
<p> Contact Us: <%= @restaurant.phone_number %>
<h3> Reviews </h3>
<% @restaurant.reviews.each do |review| %>
<div class="fw-bold"><%= review.rating %> Stars </div>
<p><%= review.content %></p>
<% end %>
<%= link_to "Back to restaurants", restaurants_path %>
<%#= link_to "Add new review", new_restaurant_review_path(@restaurant) %>
<h2>New Review</h2>
<%=simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content %>
<%= f.input :rating, :collection => [0, 1, 2, 3, 4, 5]%>
<%= f.submit %>
<% end %>
